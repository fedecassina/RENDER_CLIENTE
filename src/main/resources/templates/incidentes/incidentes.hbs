    <nav class="navbar bg-body-tertiary d-flex justify-content-between fondoCeleste">
      <button type="button" class="boton boton-primary ml-3 boton-barra-lateral no-efecto">
        <img src="img/boton-barra-lateral.png" alt="boton-barra-lateral" class="imagen-boton">
