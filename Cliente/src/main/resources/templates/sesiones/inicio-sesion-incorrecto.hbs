  <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous" />
  <!-- CSS -->
  <link rel="stylesheet" href="/css/inicio-sesion.css">
  <!-- Tipografía -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400&display=swap" rel="stylesheet">
  <!-- Javascript -->
  <script src="js/inicio-sesion.js"></script>
  <!-- Fontawesome -->
  <script src="https://kit.fontawesome.com/3ed5502ae8.js" crossorigin="anonymous"></script>
</head>

<body>

  <!-- BARRA DE NAVEGACIÓN SUPERIOR -->
  <nav class="navbar bg-body-tertiary fondoCeleste">
    <div class="container-fluid">
      <a class="navbar-brand navegador" href="pagina-principal.html">
        <i class="fa-solid fa-people-group fa-lg" style="color: #ffffff;"></i>
        EntidadesTransparentes
      </a>
    </div>
  </nav>

  <div class="container align-middle">
    <!-- Esto sería la parte de abajo de la pagina, en donde se puede iniciar sesion -->
    <div class="row">

      <!-- PARTE IZQUIERDA DE LA PAGINA -->
      <div class="col-12 d-flex align-items-center justify-content-center centrado">
        <div class="row d-flex align-items-center justify-content-center">
          <div class="col-12 mt-3 padding sombra-bloques formulario" style="width: 20rem;">
            <h1 class="titulo">Inicio de sesión</h1>
            <form method="POST" action="/iniciar-sesion">
                <div class="mb-3">
                  <div class="wave-group">
                    <input required="" type="text" class="input" name="email">
                    <span class="bar"></span>
                    <label class="label texto-formulario">
                      <span class="label-char" style="--index: 0">E</span>
                      <span class="label-char" style="--index: 1">m</span>
                      <span class="label-char" style="--index: 2">a</span>
                      <span class="label-char" style="--index: 3">i</span>
                      <span class="label-char" style="--index: 4">l</span>
                    </label>
                  </div>
                </div>
                <div class="mb-3">
                  <div class="wave-group">
                    <input required="" type="password" class="input" name="contrasenia">
                    <span class="bar"></span>
                    <label class="label texto-formulario">
                      <span class="label-char" style="--index: 0">C</span>
                      <span class="label-char" style="--index: 1">o</span>
                      <span class="label-char" style="--index: 2">n</span>
                      <span class="label-char" style="--index: 3">t</span>
                      <span class="label-char" style="--index: 4">r</span>
                      <span class="label-char" style="--index: 5">a</span>
                      <span class="label-char" style="--index: 6">s</span>
                      <span class="label-char" style="--index: 7">e</span>
                      <span class="label-char" style="--index: 8">ñ</span>
                      <span class="label-char" style="--index: 9">a</span>
                    </label>
                  </div>
                </div>
                <div class="d-flex align-items-center justify-content-center">
                  <button type="submit" class="boton sombra-boton">Entrar</button>
                </div>
            </form>
          </div>}
          <div class="col-12 padding" style="width: 20rem;">
            <div class="row">
                <p class="error">Usuario o contraseña incorrecta</p>
            </div>
          </div>
          <div class="col-12 padding" style="width: 20rem;">
            <div class="row">
              <div class="col-12 text-center">
                <p class="mb-0 texto-formulario">¿No tienes una cuenta?</p>
              </div>
              <div class="col-12 text-center mt-2 mt-md-0">
                <a href="registrarse" class="ms-2 texto-formulario registro">Regístrate</a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Bootstrap -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
