<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Movilidad360</title>
    <link rel="icon" type="image/png" href="img/icono-naranja.png">
    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous" />
    <!-- CSS -->
    <link rel="stylesheet" href="../css/comunidades.css">
    <!-- Tipografía -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400&display=swap" rel="stylesheet">
    <!-- Fontawesome -->
    <script src="https://kit.fontawesome.com/3ed5502ae8.js" crossorigin="anonymous"></script>
    <!-- Javascript -->
    <script src="js/comunidades.js"></script>
</head>

<body>
<!-- Contenedor para poner el boton de cerrar -->
<div class="container contenedor-boton">
    <div class="row">
        <div class="col-12">
            <div class="configuracion">
                <a href="/perfil"><i class="fa-solid fa-xmark fa-xl" style="color: #c0c0c0;"></i></a>
            </div>
        </div>
    </div>
</div>

<!-- Contenedor para las comunidades -->
<div class="container">
    <div class="row">
        <div class="col-12">
            <h1 class="titulo">Mis comunidades</h1>
            <div class="comunidades">
                {{#each comunidades}}
                    <div class="contenedor-comunidad d-flex">
                        <p class="nombre-comunidad">{{this.nombre}}</p>
                        <p class="info-adicional-comunidad"><span class="palabra-destacada">Descripción:</span> {{this.descripcion}}</p>

                        <a href="/comunidades/salir-comunidad/{{this.id}}" class="boton-salir sombra-boton-salir" id="ver-miembros-button" >Salir de Comunidad</a>
                    </div>
                {{/each}}
            </div>
        </div>
    </div>
</div>

<!-- Boton inferior para ver todas las comunidades -->
<div class="d-flex align-items-center justify-content-center" style="margin-top: 20px;">
    <a href="/comunidades"><button type="button" class="boton sombra-boton">Ver todas las
        comunidades</button></a>
</div>

<!-- Bootstrap -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>
</body>

</html>
